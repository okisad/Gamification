<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_background_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <Button
            android:id="@+id/fragment_user_play_test_word_finish_test_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Testi Bitir"
            android:textColor="@android:color/white"
            android:background="@drawable/round_button_red"
            android:padding="10dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/fragment_user_play_test_word_number"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="-"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/fragment_user_play_test_word_word_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@color/notification_question_color"
            android:text="Loading"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/fragment_user_play_test_word_first_button"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:lines="3"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:background="@drawable/round_button"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/fragment_user_play_test_word_second_button"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:lines="3"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:background="@drawable/round_button"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/fragment_user_play_test_word_third_button"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:lines="3"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:background="@drawable/round_button"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/fragment_user_play_test_word_fourth_button"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:lines="3"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:background="@drawable/round_button"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>