<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_background_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/fragment_play_word_discrete_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:minHeight="100dp"
            app:dsb_min="0"
            app:dsb_max="9"
            app:dsb_progressColor="@color/play_word_card_foreground_color_false"
            app:dsb_indicatorColor="@color/play_word_card_foreground_color_false"
            />
        <TextView
            android:id="@+id/fragment_play_word_which_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="-"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/fragment_play_word_word_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@color/play_word_card_foreground_color_notr"
            android:text="Loading"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <Button
            android:id="@+id/fragment_play_word_first_button"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:lines="3"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:background="@drawable/round_button"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/fragment_play_word_second_button"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:background="@drawable/round_button"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/fragment_play_word_third_button"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="5dp"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:background="@drawable/round_button"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/fragment_play_word_fourth_button"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:background="@drawable/round_button"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>